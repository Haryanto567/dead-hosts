# Link of the raw file
rawLink='https://raw.githubusercontent.com/FadeMind/hosts.extras/master/SpotifyAds/hosts'

# list name
listName='SpotifyAds.list'

# list directory
listDir='tested-list/'

# Output list
outputList=${listDir}${listName}

#################################### Update Me ################################
# Update.me
#
# @CalledBy nobody
################################################################################
updateMe()
{
    # We get the latest list
    curl -s ${rawLink} -o ${outputList}

    # We convert the file
    dos2unix ${outputList} 2> /dev/null
}

updateMe
